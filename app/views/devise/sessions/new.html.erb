<div class="logo">
  <img src="/ABI.svg">
</div>
<div class="containers">
  <h3>Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true , class: "inp", :placeholder=> "email"%>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "inp", :placeholder=> "password"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <button class="btn btn-default full-width hvr-sweep-to-right" id="btns"><span class="glyphicon glyphicon-ok"></span>
        </button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>